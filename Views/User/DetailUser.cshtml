using Microsoft.AspNetCore.Identity
@using FilRouge_Test_CodeFirst.Data
@using FilRouge_Test_CodeFirst.Models

@model UserViewModel


@{
    ViewData["Title"] = "DetailUser";
}

<h1>DetailQuiz</h1>

<div>
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dd class="col-sm-10">
            @Model.Quiz.Count()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz)
        </dt>
        <ul>
            @foreach (var quiz in Model.Quiz)
            {
                <li> @quiz.Name </li>
                <li><a asp-controller="Quiz" asp-action="Index">Voir</a> |</li>
            }
        </ul>


    </dl>
</div>
<div>

    <a asp-action="EditUser" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="CreateUser" asp-route-id="@Model?.Id">Ajouter des Utilisateur</a> |
    <a asp-action="Index">Back to List</a>
</div>
