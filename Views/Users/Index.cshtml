@using Microsoft.AspNetCore.Identity
@using FilRouge_Test_CodeFirst.Data
@using FilRouge_Test_CodeFirst.Models


@model UserViewModel


<h1 style="text-align : center">Liste des inscrits</h1>


<div class="container">

  
    <button type="button" class="myButton mb-6" onclick="window.location.href='@Url.Action("CreateUser")'">
        Ajouter un utilisateur
    </button>

    <div class="row align-items-center">

        <table class="table table-hover table-striped table-light">
            <thead>
                <tr class="table-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>

                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.IdentityUser)
                {
                    <tr class="table">

                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>


                        <td>
                            <a asp-action="EditUser" asp-route-id="@item.Id"><div class="buttonAjout">Edit </div></a> |
                            <a asp-action="DetailUser" asp-route-id="@item.Id"><div class="buttonAjout2">Details</div></a> |
                            <a asp-action="DeleteUser" asp-route-id="@item.Id"><div class="buttonAjout3">Supprimer</div></a>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>