@model FilRouge_Test_CodeFirst.Data.Entity.Quiz

@{
    ViewData["Title"] = "DetailQuiz";
}

<h1>DetailQuiz</h1>

<div>
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sujet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sujet.SujetName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level.LevelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Questions)
        </dt>
        <dd class="col-sm-10">
            @Model.Questions.Count()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Questions)
        </dt>
        <ul>
        @foreach(var question in Model.Questions)
        {
                <li> @question.ContentQuestion </li>
                <li><a asp-controller="Questions" asp-action="Index">Voir</a> |</li>
        }
        </ul>


    </dl>
</div>
<div>
    <a asp-action="EditQuiz" asp-route-id="@Model?.QuizzId">Edit</a> |
    <a asp-action="AddQuestionQuiz" asp-route-id="@Model?.QuizzId">Ajouter des Questions</a> | 

    <a asp-action="Index">Back to List</a>
</div>
